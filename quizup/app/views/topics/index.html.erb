<p id="notice"><%= notice %></p>

<h1>لیست تمام  کوییزها</h1>

<table 
  <thead>
    <tr>
      <th>نام</th>
      
      <th>دسته‌بندی</th>
      <th>کاربر</th>
      <th colspan="3"></th>
    </tr>
  </thead><br><br>
 
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        
        <td><%= topic.category.name %></td>
        <td><%= topic.id%></td> 
        <td><%= link_to 'نمایش', topic %></td>
        <td><%= link_to 'ویرایش', edit_topic_path(topic) %></td>
        <td><%= link_to 'حذف', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>



<%= form_tag(topics_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "جستجو کوییزها" %>
<%= submit_tag " جستجو"%>
<% end %>



</table><br><br>
<h3>لیست کوییزهای شما</h3>
<table border="4" style="width:70%">
 <tbody>
 <tr>
  <%params[:q]= current_user.id%>
        <%@topics = Topic.where("user_id LIKE ? ", "%#{params[:q]}%")%>
        <%if !@topics.blank?%>
          <% for topic in @topics%>
      
        <td><%= topic.name   %></td>
        <!--<td><%= topic.language %></td> -->
        <td><%= topic.category.name   %></td>
        <td><%= link_to 'نمایش', topic %></td>
        <td><%= link_to 'ویرایش', edit_topic_path(topic) %></td>
        <td><%= link_to 'حذف', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
          <%end%>
        <% else %>
        عنوانی برای شما یافت نشد.
        <%end%>
        
  </tbody>
  </table>
<br><br><br>

