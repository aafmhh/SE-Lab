<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @question.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ture_answer) %>:</strong></dt>
  <dd><%= @question.ture_answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:false_answer1) %>:</strong></dt>
  <dd><%= @question.false_answer1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fasle_answer2) %>:</strong></dt>
  <dd><%= @question.fasle_answer2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:false_answer3) %>:</strong></dt>
  <dd><%= @question.false_answer3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @question.group_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
