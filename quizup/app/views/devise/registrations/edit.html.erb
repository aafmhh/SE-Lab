<!-- **********************************************************************************************************************************************************
  MAIN CONTENT
  *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
<!-- <section class="wrapper"> -->
  <!-- BASIC FORM ELELEMNTS -->
  <div class="row mt">
    <div class="col-lg-12">
      <div class="form-panel" style="float: left;">
        <h4 class="mb"><i class="fa fa-angle-left"></i> مشخصات</h4>
        <div class="form-horizontal style-form">
        <%= form_for(resource, as: resource_name, url: edit_registration_path(resource_name), html: { method: :put}) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">نام</label>
              <div class="col-sm-10">
                  <%= f.text_field :firstname, autofocus: true, class: "form-control"%>
              </div>
            </div>
          </div>
          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">نام خانوادگی</label>
              <div class="col-sm-10">
                  <%= f.text_field :lastname, autofocus: true, class: "form-control"%>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">آدرس ایمیل</label>
              <div class="col-sm-10">
                  <%= f.text_field :email, autofocus: true, class: "form-control"%>
              </div>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>در انتظار تایید از طریق ایمیل <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">کشور</label>
              <div class="col-sm-10">
                <%= localized_country_select(:user, :country, [], {:include_blank => :country}) %> 
              </div>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">جنسیت</label>
              <div class="col-sm-10">
                <%= f.label :جنسیت, "مرد", :value => true %>
                <%= f.radio_button :gender, true %>
                <%= f.label :جنسیت, "زن", :value => false %>
                <%= f.radio_button :gender, false %> 
              </div>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">رمز عبور</label>
              <div class="col-sm-10">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">تایید رمز عبور</label>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label class="col-sm-2 col-sm-2 control-label">رمز‌عبور برای تایید</label>
              <div class="col-sm-10">
                <%= f.password_field :current_password, autocomplete: "off",class: "form-control" %>
              </div>
            </div>
          </div>
          
          <div class="actions" >
            <div class="form-group" class="form-inline" role="form">
              <div class="col-sm-10" >
                <%= f.submit "به روز رسانی", class: "btn btn-theme" %>
              </div>
            </div>
            
          </div>
        <% end %></div>
        <h3>حذف حساب کاربری</h3>

  <p>ناراضی هستید؟ <%= button_to "حذف حساب کاربری", registration_path(resource_name), data: { confirm: "برای حذف حساب خود مطمین هستید؟" }, method: :delete %></p>

  <%= link_to "بازگشت", :back %>
      </div><!-- /form-panel -->

    </div><!-- /col-lg-12 -->           
<!--main content end-->
</section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="assets/js/jquery.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="assets/js/jquery.scrollTo.min.js"></script>
    <script src="assets/js/jquery.nicescroll.js" type="text/javascript"></script>


