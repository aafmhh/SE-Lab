<html dir="rtl"> 
  <h2>حساب کاربری شما</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :نام %><br />
      <%= f.text_field :firstname, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label ("نام خانوادگی") %><br />
      <%= f.text_field :lastname, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label ("آدرس ایمیل") %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>در انتظار تایید از طریق ایمیل <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :کشور %><br />
      <%= localized_country_select(:user, :country, [], {:include_blank => :country}) %>
    </div>

    <div class="field">
      <%= f.label :جنسیت, "مرد", :value => true %>
      <%= f.radio_button :gender, true %>
      <%= f.label :جنسیت, "زن", :value => false %>
      <%= f.radio_button :gender, false %>
    </div>

    <div class="field">
      <%= f.label ("رمز عبور") %> <i>(اگر مایل به تغییر این فیلد نیستید محتوای آن را خالی بگذارید)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label ("تایید رمز عبور") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label ("رمز عبور فعلی") %> <i>(برای اعمال تغییرات باید رمز عبور خود را وارد کنید)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "به روز رسانی" %>
    </div>
  <% end %>

  <h3>حذف حساب کاربری</h3>

  <p>ناراضی هستید؟ <%= button_to "حذف حساب کاربری", registration_path(resource_name), data: { confirm: "برای حذف حساب خود مطمین هستید؟" }, method: :delete %></p>

  <%= link_to "بازگشت", :back %>
</html>